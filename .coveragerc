# Coverage configuration for Land Registry project

[run]
# Source packages to measure
source = land_registry

# Omit files from coverage
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */.venv/*
    */site-packages/*
    */migrations/*
    */settings/*
    setup.py
    manage.py

# Include patterns
include = land_registry/*

# Run coverage on all code branches
branch = True

# Parallel execution support
parallel = True

# Data file location
data_file = .coverage

[report]
# Fail under this coverage percentage
fail_under = 80

# Show missing line numbers in report
show_missing = True

# Skip covered files in report
skip_covered = False

# Skip empty files
skip_empty = True

# Precision for coverage percentage
precision = 2

# Exclude lines matching these patterns from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if False:
    if __name__ == .__main__.:
    @abstractmethod
    @abc.abstractmethod
    class .*\bProtocol\):
    @typing.overload
    @overload
    # Type checking imports
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

[html]
# HTML report directory
directory = htmlcov

# Title for HTML report
title = Land Registry Coverage Report

# Show contexts in HTML report
show_contexts = True

[xml]
# XML report output file
output = coverage.xml

[json]
# JSON report output file
output = coverage.json

# Pretty print JSON
pretty_print = True